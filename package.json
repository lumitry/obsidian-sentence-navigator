{
  "name": "obsidian-sentence-wizard",
  "version": "1.0.1",
  "description": "Manipulate sentences as a unit of movement. Select, move and delete by whole sentences.",
  "main": "main.js",
  "scripts": {
    "start": "esbuild main.ts --bundle --external:obsidian --outdir=.  --target=es2019 --format=cjs --sourcemap=inline --watch",
    "build": "esbuild main.ts --bundle --external:obsidian --outdir=.  --target=es2019 --format=cjs"
  },
  "keywords": [],
  "author": "Andrew Brown & Tim Hor",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^16.11.1",
    "esbuild": "0.13.8",
    "obsidian": "^0.12.17",
    "tslib": "2.3.1",
    "typescript": "^4.4.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,html,css,md,json}": "prettier --write"
  }
}
